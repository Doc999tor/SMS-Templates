@import '~normalize.css';
@import 'variables.css'
*
  box-sizing border-box
#root
  background-color var(--sec-color)
  max-width 640px
  margin 0 auto
  overflow-y auto
  -webkit-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  -moz-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 1rem
  color var(--main-color)
  margin 0
p
  margin 0
.hidden
  display none
