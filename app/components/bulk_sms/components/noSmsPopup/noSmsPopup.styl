.nosms_wrap
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  display flex
  align-items center
  justify-content center
  z-index 11
  background-color rgba(0, 0, 0, 0)
  animation background 0.3s forwards
  .nosms_body
    position relative
    width 80%
    max-width 500px
    display flex
    flex-direction column
    justify-content space-between
    align-items center
    min-height 19.25rem
    background-color var(--white-color)
    border-radius 1rem
    padding 2rem 1rem 1rem
    box-shadow 0 3px 20px 0 rgba(41, 41, 204, 0.2)
    animation show_nosms 0.3s
    .close_popup_btn
      display flex
      align-items center
      justify-content center
      width auto
      height auto
      padding 0.75rem
      border none
      outline none
      background-color transparent
      position absolute
      top 0
      right 0
      img
        margin 0
    .common_circle
      width 5rem
      height 5rem
      margin 0 auto
      display flex
      align-items center
      justify-content center
      border-radius 50%
      background-image linear-gradient(137deg, #ff55a2 15%, #981f57 85%)
    .text_conflict
      text-align center
      padding 1rem 1.5rem 2rem
      font-size 1rem
      color var(--active-color)
      white-space pre-line
    .buy_sms_button
      width 100%
      border none
      height 3rem
      display flex
      align-items center
      justify-content center
      outline none
      font-size 0.75rem
      font-weight 500
      color var(--white-color)
      background-color var(--dark-color)
      border-radius 0.5rem
      text-transform uppercase
      img
        -moz-margin-end 0.5rem
        -webkit-margin-end 0.5rem
        margin-inline-end 0.5rem
  .hide-nosms
    animation hide-nosms 0.3s forwards
.nosms-background
  animation nosms-background 0.3s forwards
@keyframes hide-nosms
  0%
    transform scale(1)
  100%
    transform scale(0)
@keyframes nosms-background 
  0%
    background-color rgba(0, 0, 0, 0.3)
  100%
    background-color rgba(0, 0, 0, 0)
@keyframes show_nosms
  0%
    transform scale(0)
@keyframes background
  0%
    background-color rgba(0, 0, 0, 0)
  100%
    background-color rgba(0, 0, 0, 0.3)
body[style="direction: rtl;"]
  .popup_body
    .close_popup_btn
      left 0
      right auto
