.popup_wrap
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  display flex
  align-items center
  justify-content center
  z-index 11
  background-color rgba(0, 0, 0, 0)
  animation background 0.3s forwards
  .popup_body
    position relative
    width 80%
    max-width 500px
    display flex
    flex-direction column
    justify-content space-between
    align-items center
    min-height 19.25rem
    background-color var(--white-color)
    border-radius 1rem
    box-shadow 0 3px 20px 0 rgba(41, 41, 204, 0.2)
    animation show_body 0.3s
    h2
      padding 1.5rem 0 1rem
      font-size 1.125rem
      font-weight bold
    .text-wrap
      margin 0 0 2.5rem
      width 90%
      flex-grow 1
      border-radius 0.625rem
      background-color var(--sec-color)
      padding 0.75rem 1rem
      p
        font-size 1rem
    button
      outline none
      border none
      width 100%
      height 3.25rem
      background-color var(--dark-color)
      border-radius 0 0 1rem 1rem
      color var(--white-color)
      font-size 0.875rem
      font-weight 500
      text-transform uppercase
      img
        -moz-margin-end 0.5rem
        -webkit-margin-end 0.5rem
        margin-inline-end 0.5rem
  .hide-body
    animation hide-body 0.3s forwards
.hide-background
  animation hide-background 0.3s forwards

@keyframes hide-body
  0%
    transform scale(1)
  100%
    transform scale(0)
@keyframes hide-background 
  0%
    background-color rgba(0, 0, 0, 0.3)
  100%
    background-color rgba(0, 0, 0, 0)
@keyframes show_body
  0%
    transform scale(0)
@keyframes background
  0%
    background-color rgba(0, 0, 0, 0)
  100%
    background-color rgba(0, 0, 0, 0.3)