.bulk-sms-form
  padding-top 0.5rem
  .tag
    border 1px solid var(--dark-color)
    border-radius 3rem
    font-size 0.875rem
    line-height 1
    background-color #f0e9ff
    color var(--dark-color)
    opacity 1
    transition opacity 0.5s
  .used_tag
    opacity 0.5
    transition1 opacity 0.5s
  .template
    width 100%
    height 7rem
    background-color var(--sec-color)
    border 2px solid var(--sec-color)
    border-radius 0.625rem
    padding 0.75rem 1rem
    line-height 1.3
    outline none
    transition border-color 0.5s, background-color 0.5s
    &:focus
      background-color var(--white-color)
      border-color var(--dark-color)
      transition border-color 0.5s, background-color 0.5s
    &:empty:before
      content attr(placeholder)
      color #9ba1b3
    .tag
      padding 0 0.3rem
      white-space nowrap
  .characters
    font-size 0.875rem
    color #69738d
    padding 0.2rem 0 0.75rem
  .warning_length
    color var(--active-color)
  .preview_btn
    border none
    outline none
    width 100%
    display flex
    align-items center
    justify-content center
    background-color var(--dark-color)
    font-size 0.875rem
    font-weight 500
    border-radius 0.5rem
    min-height 2.375rem
    text-transform uppercase
    color var(--white-color)
    opacity 1
    transition opacity 0.5s
    img
      -moz-margin-end 0.5rem
      -webkit-margin-end 0.5rem
      margin-inline-end 0.5rem
  .tags_strip
    padding-top 1.5rem
    .tags_strip_title
      font-size 1.125rem
      font-weight 500
  .btns_wrapper
    position fixed
    bottom 0
    left 0
    width 100%
    z-index 10
    .btns_sections
      margin 0 auto
      width 100%
      max-width 640px
      display flex
      justify-content space-between
      background-color var(--white-color)
      box-shadow 0 0 12px 0 rgba(41, 41, 204, 0.2)
      padding 0.75rem 1rem
      height 4.5rem
      button
        outline none 
        border none
        width 48.5%
        border-radius 0.5rem
        display flex
        align-items center
        justify-content center
        text-transform uppercase
        font-size 0.875rem
        font-weight 500
        img
          -moz-margin-end 0.5rem
          -webkit-margin-end 0.5rem
          margin-inline-end 0.5rem
  .cancel
    background-color var(--sec-color)
    color var(--dark-color)
  .send
    opacity 1
    transition opacity 0.5s
    background-color var(--dark-color)
    color var(--white-color)
  .inactive_btn
    opacity 0.5
    transition opacity 0.5s
  .tags_list
    padding-top 1rem
    display flex
    flex-wrap wrap
    .tag
      padding 0.4rem 0.75rem
      margin-bottom 0.5rem
      -moz-margin-end 0.5rem
      -webkit-margin-end 0.5rem
      margin-inline-end 0.5rem
