#create-body
  padding 5px 15px
  .ch445
    height 445px
  .ch420
    height 420px
  .create
    width 100%
    h1
      color #6b6b6b
    .name
      padding-bottom 3px
    input
      border 2px solid grey
      border-radius 7px
      width 100%
      height 40px
      color grey
      padding 0 5px
      &:focus
        outline none
    .text
      padding 5px 0 3px 0
    .text-input:empty:before
      content attr(placeholder)
      color #808080
    .text-input
      border 2px solid grey
      border-radius 7px
      overflow-y scroll
      overflow-x hidden
      font-size 21px
      padding 0 5px
      height 120px
      width 100%
      &:focus
        outline none
      .tag
        display inline-block
        background-color lightblue
        border-radius 5px
        padding 0.5px 5px
        user-select none
        white-space nowrap
    .tags
      padding 5px 0 3px 0
    .tag-list
      font-size 12px
      border none
      border-radius 5px
      margin 2px 5px
      background-color lightblue
      &:focus
        outline none
  .preview-content
    width 100%
    .content
      width 100%
      height 400px
      border 2px solid grey
      border-radius 7px
      overflow-y scroll
      font-size 21px
      padding 0 5px
      &:focus
        outline none
  .preview-wrap
    width 100%
    margin 0 auto
    padding 10px 0
    .preview
      display block
      position relative
      background-color white
      border 2px solid aqua
      border-radius 15px
      padding-right 30px
      color aqua
      margin 0 auto
      height 30px
      user-select none
      width 150px
      &:focus
        outline none
      img
        position absolute
        width 20px
        margin 3px 5px
    .preview-active
      background-color aqua!important
      color white!important
  .counter
    padding 5px 0 0 0
    width 100%
    text-align start
    font-size 16px
    color grey
  .message
    color red!important
    font-size 12px
    width 100%
#create-footer
  .modal-footer
    height 60px
    background-color silver!important
    button
      display inline-block
      height 100%
      width 50%
      background-color white
      border 1px solid silver
      &:focus
        outline none
    .radiusLeft
      border-bottom-left-radius 10px
    .radiusRight
      border-bottom-right-radius 10px
