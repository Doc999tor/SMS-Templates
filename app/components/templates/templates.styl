#templates
  .controls
    width 45%
    height 90px
    border-bottom 1px solid silver
    .icon
      display inline-block
      width 33.3333%
      height 90px
      img
        margin 32px 18px
    .delete
      background-color dimgrey
      position relative
      top -1px
    .edit
      background-color grey
    .clone
      background-color darkgrey
      img
        width 27px
        height 27px
  .reminder
    border-bottom 1px solid silver
    height 90px
    .data
      display inline-block
      padding 5px 10px
      font-weight 600
      width 87%
      .name
        text-align start
        color #00b6fb
        height 20px
      .text
        text-align start
        color #6b6b6b
        height 40px
        width 100%
        // text-overflow ellipsis
        // white-space nowrap
        overflow hidden
        .tag
          background-color lightblue
          border-radius 5px
          padding 0.5px 5px
          // text-overflow ellipsis
          // white-space nowrap
          overflow hidden
      .tags
        height 20px
        color #00b6fb
    .send
      display inline-block
      height 100%
      width 13%
      padding 30px 0px
      position relative
      top -30px
      img
        width 40px
        height 40px
