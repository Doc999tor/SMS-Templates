#templates
  .controls
    width 30%
    height 90px
    border-bottom 1px solid silver
    .icon
      display inline-block
      height 100%
      width 50%
      padding 30px 15px
    .delete
      background-color dimgrey
      position relative
      top -1px
    .edit
      background-color grey
  .reminder
    border-bottom 1px solid silver
    height 90px
    .data
      display inline-block
      padding 5px 10px
      font-weight 600
      width 87%
      .name
        text-align start
        color #00b6fb
        height 20px
      .text
        text-align start
        color #6b6b6b
        height 40px
        width 100%
        line-height 20px
        text-overflow ellipsis
        overflow hidden
        .tag
          background-color lightblue
          border-radius 5px
          padding 0.5px 5px
          white-space nowrap
      .tags
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        color #00b6fb
        height 20px
    .send
      display inline-block
      height 100%
      width 13%
      padding 30px 0px
      position relative
      top -20px
      img
        width 40px
        height 40px
