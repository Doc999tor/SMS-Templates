#SMSCount-body
  padding 10px 5px
  height 120px
  h1
    text-align center
    padding-top 40px
    width 100%
    color grey
#SMSCount-footer
  .modal-footer
    height 60px
    background-color silver!important
    button
      display inline-block
      height 100%
      width 50%
      background-color white
      border 1px solid silver
      &:focus
        outline none
    .radiusLeft
      border-bottom-left-radius 10px
    .radiusRight
      border-bottom-right-radius 10px
